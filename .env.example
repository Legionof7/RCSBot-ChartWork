# RCSBot-ChartWork Environment Variables Example
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Key - Required for model_service.py
GEMINI_API_KEY=your_gemini_api_key_here

# Pinnacle API Key - Required for RCS messaging
PINNACLE_API_KEY=your_pinnacle_api_key_here

# Optional: OpenRouter API Key (if using OpenRouter)
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# Development settings (optional)
DEBUG=True
FLASK_ENV=development

# Enhanced Fallback Mechanism Settings
# Set to true to always use SMS/MMS fallback even if RCS is supported (testing)
FORCE_SMS_FALLBACK=false

# Image optimization settings for MMS fallback
MMS_IMAGE_MAX_SIZE_KB=100
MMS_IMAGE_MAX_DIMENSION=800

# Logging
LOG_LEVEL=INFO
